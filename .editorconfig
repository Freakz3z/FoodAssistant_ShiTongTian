# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件
root = true

# 所有文件通用配置
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript 文件配置
[*.{js,jsx,ts,tsx}]
quote_type = single
max_line_length = 100

# HTML 文件配置
[*.html]
indent_size = 2

# CSS 文件配置
[*.{css,scss,less}]
indent_size = 2

# JSON 文件配置
[*.json]
indent_size = 2

# Markdown 文件配置
[*.md]
trim_trailing_whitespace = false
max_line_length = off 